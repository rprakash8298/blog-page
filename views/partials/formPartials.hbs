<div class="form-group">
    <label for="images">Image</label>
    <input type="file" value="{{article.images}}"
        name="images" id="images" accept="image/*"
        class="form-control" required>
</div>


<div class="form-group">
    <label for="title">Title</label>
    <input type="text" value="{{article.title}}"
        name="title" id="title" class="form-control"
        required>
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description"
        class="form-control"
        required>{{article.description}}</textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown"
        class="form-control">{{article.markdown}}</textarea>
</div>

<a href="/"
    class="btn btn-secondary rounded-pill mt-4">Cancel</a>
<button type="submit"
    class="btn btn-danger rounded-pill mt-4">Save</button>